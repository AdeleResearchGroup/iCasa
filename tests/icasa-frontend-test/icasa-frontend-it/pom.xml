<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>fr.liglab.adele.icasa</groupId>
        <artifactId>parent</artifactId>
        <version>1.2.2-SNAPSHOT</version>
        <relativePath>../../../parent</relativePath>
    </parent>
    <artifactId>icasa.frontend.test</artifactId>
    <packaging>jar</packaging>
    <name>${productName} :: ${projectName}</name>
    <properties>
        <gebVersion>0.9.0-RC-1</gebVersion>
        <groovyVersion>1.8.6</groovyVersion>
        <seleniumVersion>2.33.0</seleniumVersion>
        <distrib.groupId>${project.groupId}</distrib.groupId>
        <distrib.artifactId>icasa.frontend.distribution.test</distrib.artifactId>
        <distrib.version>${project.version}</distrib.version>
    </properties>

    <profiles>
        <profile>
            <id>windows-properties</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <run.command>cmd</run.command>
                <browser.driver>chromedriver.exe</browser.driver>
                <startGatewayScript>startGateway.bat</startGatewayScript>
                <run.command.additionnal.arg>/c</run.command.additionnal.arg>
                <startGatewayScript>startGatewayDemon.bat</startGatewayScript>
                <stopGatewayScript>stopGatewayDemon.bat</stopGatewayScript>
                <startGUIScript>startGUIDemon.bat</startGUIScript>
                <stopGUIScript>stopGUIDemon.bat</stopGUIScript>
            </properties>
        </profile>
        <profile>
            <id>linux-properties</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <browser.driver>chromedriver</browser.driver>
                <run.command>sh</run.command>
                <startGatewayScript>startGatewayDemon.sh</startGatewayScript>
                <run.command.additionnal.arg>-v</run.command.additionnal.arg>
                <stopGatewayScript>stopGatewayDemon.sh</stopGatewayScript>
                <startGUIScript>startGUIDemon.sh</startGUIScript>
                <stopGUIScript>stopGUIDemon.sh</stopGUIScript>
            </properties>
        </profile>

    </profiles>
    <dependencies>
        <!-- Distribution to test containing frontend and backend-->
        <dependency>
            <groupId>${distrib.groupId}</groupId>
            <artifactId>${distrib.artifactId}</artifactId>
            <version>${distrib.version}</version>
            <type>osgi-distribution</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovyVersion}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.spockframework</groupId>
            <artifactId>spock-core</artifactId>
            <version>0.7-groovy-1.8</version>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.codehaus.groovy</groupId>
                    <artifactId>groovy-all</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.gebish</groupId>
            <artifactId>geb-spock</artifactId>
            <version>${gebVersion}</version>
            <scope>test</scope>
        </dependency>


        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-firefox-driver</artifactId>
            <version>${seleniumVersion}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-support</artifactId>
            <version>${seleniumVersion}</version>
        </dependency>



      </dependencies>
    <build>
        <plugins>
            <!--Unzip the distribution to test. It contains the frontend and the backend -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-distrib</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeGroupIds>${distrib.groupId}</includeGroupIds>
                            <includeArtifactIds>${distrib.artifactId}</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/distribution</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <testFailureIgnore>true</testFailureIgnore>
                    <includes>
                        <include>*Test.*</include>
                    </includes>
                    <systemPropertyVariables>
                        <geb.build.baseUrl>http://localhost:9000/simulator</geb.build.baseUrl>
                        <geb.build.reportsDir>target/test-reports/geb</geb.build.reportsDir>
                        <webdriver.chrome.driver>src/test/resources/driver/${os.name}/${browser.driver}</webdriver.chrome.driver>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.gmaven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <providerSelection>1.8</providerSelection>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.gmaven.runtime</groupId>
                        <artifactId>gmaven-runtime-1.8</artifactId>
                        <version>1.4</version>
                        <exclusions>
                            <exclusion>
                                <groupId>org.codehaus.groovy</groupId>
                                <artifactId>groovy-all</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <version>1.8.6</version>
                    </dependency>
                    <dependency>
                        <groupId>org.spockframework</groupId>
                        <artifactId>spock-core</artifactId>
                        <version>0.7-groovy-1.8</version>
                        <exclusions>
                            <exclusion>
                                <groupId>org.codehaus.groovy</groupId>
                                <artifactId>groovy-all</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <!-- Lunch Backend and FrontEnd Script-->
                        <id>start-third-parties</id>
                        <phase>process-test-resources</phase>
                        <configuration>
                            <target>
                                <exec executable="${run.command}"
                                      dir="${project.build.directory}/distribution/${distrib.artifactId}"
                                      spawn="true">
                                    <arg value="${run.command.additionnal.arg}"/>
                                    <arg value="${startGatewayScript}"/>
                                </exec>
                                <exec executable="${run.command}"
                                      dir="${project.build.directory}/distribution/${distrib.artifactId}/web.simulator"
                                      spawn="true">
                                    <arg value="${run.command.additionnal.arg}"/>
                                    <arg value="${startGUIScript}"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <!-- Stop Backend and FrontEnd Script-->
                        <id>stop-third-parties</id>
                        <phase>test</phase>
                        <configuration>
                            <target>
                                <exec executable="${run.command}"
                                      dir="${project.build.directory}/distribution/${distrib.artifactId}"
                                      spawn="true">
                                    <arg value="${run.command.additionnal.arg}"/>
                                    <arg value="${stopGatewayScript}"/>
                                </exec>
                                <exec executable="${run.command}"
                                      dir="${project.build.directory}/distribution/${distrib.artifactId}/web.simulator"
                                      spawn="true">
                                    <arg value="${run.command.additionnal.arg}"/>
                                    <arg value="${stopGUIScript}"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>