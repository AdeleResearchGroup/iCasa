  <instance name="modify-device-value-command" component="ModifyDeviceValueCommand" />
  <instance name="activate-device-command" component="ActivateDeviceCommand" />
  <instance name="deactivate-device-command" component="DeactivateDeviceCommand" />
  <instance name="move-command" component="MovePersonCommand" />
  <instance name="fault-device-command" component="FaultDeviceCommand" />
  <instance name="repair-device-command" component="RepairDeviceCommand" />
  <instance name="add-device-command" component="AddDeviceCommand" />
  <instance name="remove-device-command" component="RemoveDeviceCommand" />
  <instance name="move-device-command" component="MoveDeviceCommand" />

  
