<ipojo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
  xmlns="org.apache.felix.ipojo">


  <component name="ScriptExecutor" classname="fr.liglab.adele.icasa.script.executor.impl.ScriptExecutorImpl">
    <provides />
    <requires field="clock" optional="false" />
    <requires aggregate="true" optional="true" id="commands">
      <callback type="bind" method="bindCommand" />
      <callback type="unbind" method="unbindCommand" />
    </requires>
    <callback transition="invalidate" method="stop" />
  </component>

  <instance name="script-executor" component="ScriptExecutor" />

  <component name="MovePersonCommand" classname="fr.liglab.adele.icasa.script.executor.impl.commands.MovePersonCommand">
    <provides>
      <property name="namespace" value="simulator" type="java.lang.String" />
      <property name="name" value="move" type="java.lang.String" />
      <property name="description" value="move person $1 to room $2" type="java.lang.String" />
    </provides>
    <requires field="simulationManager" optional="false" />
  </component>

  <component name="FaultDeviceCommand" classname="fr.liglab.adele.icasa.script.executor.impl.commands.FaultDeviceCommand">
