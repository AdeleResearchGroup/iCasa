<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <!-- Project parent -->
  <parent>
    <groupId>fr.liglab.adele.icasa</groupId>
    <artifactId>parent</artifactId>
    <version>1.2.5-SNAPSHOT</version>
    <relativePath>../../../parent</relativePath>
  </parent>
  
  <!-- Project Description -->
  <artifactId>icasa.simulator.dp</artifactId>
  <packaging>deployment-package</packaging>
  <name>${productName} :: ${projectName}</name>
  
  <dependencies>
    <!-- Simulator -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simulator.api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simulator.impl</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.light</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.sprinkler</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.sound</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.temperature</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.gasSensor</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.presence</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.motion</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.power</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.push.button</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>device.personal</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simulator.remote</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.ow2.chameleon.rose.atmosphere</groupId>
      <artifactId>atmosgi-service</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ow2.chameleon.rose.atmosphere</groupId>
      <artifactId>atmosgi-component</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ow2.chameleon.rose.rest</groupId>
      <artifactId>jersey-exporter</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-server</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-client</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.mail</groupId>
      <artifactId>mail</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.xml.bind</groupId>
      <artifactId>jaxb-api-osgi</artifactId>
    </dependency>
    <dependency>
      <groupId>org.ow2.chameleon.json</groupId>
      <artifactId>json-service-json.org</artifactId>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>de.akquinet.gomobile</groupId>
        <artifactId>maven-dp-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <writeExtraData>true</writeExtraData>
          <includeDependencies>true</includeDependencies>
          <deploymentPackage>
            <resources>
               <processedResource>
                  <filePath>NOTICE</filePath>
                  <targetPath>META-INF</targetPath>
               </processedResource>
               <processedResource>
                  <filePath>LICENSE</filePath>
                  <targetPath>META-INF</targetPath>
               </processedResource>               
            </resources>
          </deploymentPackage>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
