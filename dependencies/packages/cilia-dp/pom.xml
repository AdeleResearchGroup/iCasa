<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Project parent -->
	<parent>
		<groupId>fr.liglab.adele.m2mappbuilder</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../../../parent</relativePath>
	</parent>

	<!-- Project Description -->
	<artifactId>cilia.dp</artifactId>
	<packaging>deployment-package</packaging>
    <version>${ciliaVersion}</version>
	<name>${productName} :: ${projectName}</name>

	<dependencies>
		<dependency>
			<groupId>fr.liglab.adele.cilia</groupId>
			<artifactId>cilia-core</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.cilia</groupId>
			<artifactId>cilia-runtime</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.cilia</groupId>
			<artifactId>cilia-remote</artifactId>
		</dependency>
        <dependency>
            <groupId>org.ow2.chameleon.rose.rest</groupId>
            <artifactId>jersey-exporter</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-server</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api-osgi</artifactId>
        </dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>de.akquinet.gomobile</groupId>
				<artifactId>maven-dp-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<writeExtraData>true</writeExtraData>
					<deploymentPackage>
						<resources>
                            <processedResource>
                                <processor>org.osgi.deployment.rp.autoload</processor>
                                <filePath>/src/main/resources/rose-conf-ciliaREST.json</filePath>
                            </processedResource>
						</resources>
					</deploymentPackage>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
