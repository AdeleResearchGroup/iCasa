<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>fr.liglab.adele.common</groupId>
		<artifactId>base</artifactId>
		<version>1.0.3</version>
      <relativePath />
	</parent>

	<!-- Project coordinates -->
	<groupId>fr.liglab.adele.icasa</groupId>
	<artifactId>platform.parent</artifactId>
   <version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<!-- Project description -->
	<name>${productName} :: ${projectName}</name>
	<description>${project.name}</description>
	<inceptionYear>2012</inceptionYear>

	<!-- Project common properties -->
	<properties>
		<productName>iCasa Platform</productName>
      <productVersion>${project.version}</productVersion>
      <ciliaVersion>1.6.3</ciliaVersion>
      <cxfVersion>2.3.2</cxfVersion>
      <!--UPNP -->
      <UPnPBDVersion>0.8.0</UPnPBDVersion>
      <UPnPBDExtrasVersion>0.4.0</UPnPBDExtrasVersion>
      
	</properties>

	<!-- Project repositories -->
	<repositories>
	<!-- iCASA repositories -->
		<repository>
			<id>icasa-snapshot-repository</id>
			<name>iCASA Snapshot repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/snapshot/</url>
		</repository>
		<repository>
			<id>icasa-release-repository</id>
			<name>iCASA Release repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/release/</url>
		</repository>
		
	</repositories>
	
	 <pluginRepositories>
		<pluginRepository>
			<id>elca-services</id>
			<url>http://el4.elca-services.ch/el4j/maven2repository</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>

	<!-- Dependencies version management -->
	<dependencyManagement>
		<dependencies>

            <!-- CXF -->
            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-transports-http</artifactId>
                <version>${cxfVersion}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxfVersion}</version>
            </dependency>

			<!-- UPNP -->
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.upnp.basedriver</artifactId>
            <version>${UPnPBDVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.upnp.extra</artifactId>
            <version>${UPnPBDExtrasVersion}</version>
			</dependency>

			<!-- JUnit 4 and Mockito for tests -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.2</version>
			</dependency>
			<dependency>
				<groupId>org.mockito</groupId>
				<artifactId>mockito-all</artifactId>
				<version>1.7</version>
			</dependency>
			

			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.usb.basedriver</artifactId>
				<version>0.0.2-SNAPSHOT</version>
			</dependency>

         <!-- Cilia Dependencies-->
         <dependency>
            <groupId>fr.liglab.adele.cilia</groupId>
            <artifactId>cilia-core</artifactId>
            <version>${ciliaVersion}</version>
         </dependency>
         <dependency>
            <groupId>fr.liglab.adele.cilia</groupId>
            <artifactId>cilia-runtime</artifactId>
            <version>${ciliaVersion}</version>
         </dependency>
         
		</dependencies>
	</dependencyManagement>

	<build>

		<!-- Plugins version management -->
		<pluginManagement>
			<plugins>
				
				<!-- License plugin -->
				<plugin>
					<groupId>com.google.code.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.4.0</version>
					<configuration>
						<header>${basedir}/../parent/license.txt</header>
						<aggregate>true</aggregate>
						<excludes>
							<exclude>.gitignore</exclude>
							<exclude>license.txt</exclude>
                            <exclude>**/.idea/**</exclude>
                            <exclude>**/*.iml</exclude>
							<exclude>**/src/test/resources/**</exclude>
							<exclude>**/src/test/data/**</exclude>
							<exclude>**/*.so</exclude>
							<exclude>**/*.dll</exclude>
							<exclude>**/*.bhv</exclude>
							<exclude>**/*.cfg</exclude>
							<exclude>**/*.dp</exclude>
							<exclude>**/*.xcf</exclude>
							<exclude>**/*.md</exclude>
							<exclude>**/*.jj</exclude>
							<exclude>.git/**/*</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<phase>verify</phase>
							<goals>
								<goal>format</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
            <plugin>
               <artifactId>maven-deploy-plugin</artifactId>
               <version>2.7</version>
            </plugin>
			</plugins>
		</pluginManagement>

		<!-- Build extensions -->
		<extensions>

		</extensions>
		
		<plugins>
		  
		</plugins>
	</build>
   <distributionManagement>
      <repository>
         <id>cloudbees-adele-release</id>
         <name>Cloudbees Adele Repository</name>
         <url>dav:https://repository-icasa.forge.cloudbees.com/release</url>
      </repository>
   </distributionManagement>
   <scm>
      <connection>scm:git:ssh://git@github.com/AdeleResearchGroup/M2MAppBuilder.git</connection>
      <url>https://github.com/AdeleResearchGroup/M2MAppBuilder.git</url>
      <developerConnection>scm:git:ssh://git@github.com/AdeleResearchGroup/M2MAppBuilder.git</developerConnection>
      <tag>HEAD</tag>
   </scm>
</project>
