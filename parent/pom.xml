			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>context.api</artifactId>
				<version>${iCasaVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>context.impl</artifactId>
				<version>${iCasaVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>device.api</artifactId>
				<version>${iCasaVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
