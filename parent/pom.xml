	<build>

		<!-- Plugins version management -->
		<pluginManagement>
			<plugins>

				<!-- Compiler plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<!-- By default, compile Java 1.5 sources for JRE 1.5. for better support of 32 bit native libraries -->
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>

				<!-- Bundle plugin -->

				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.4</version>
					<extensions>true</extensions>
					<configuration>
						<instructions>
							<!-- Default bundle headers -->
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<Bundle-Version>${project.version}</Bundle-Version>
							<Bundle-Vendor>Adèle Team</Bundle-Vendor>
							<Bundle-DocURL>http://wikiadele.imag.fr/index.php/iCASA</Bundle-DocURL>
							<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
							<Bundle-ContactAddress>thomas.leveque@imag.fr</Bundle-ContactAddress>
							<Bundle-Copyright>Copyright 2011-2012 Université Joseph Fourier</Bundle-Copyright>
							<Bundle-License>Apache License - Version 2.0;
								link=http://www.apache.org/licenses/LICENSE-2.0.txt</Bundle-License>
						</instructions>
					</configuration>
				</plugin>

				<!-- iPOJO plugin -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-ipojo-plugin</artifactId>
					<version>1.8.0</version>
					<!-- Attach the iPOJO bundle manipulation to the project lifecycle. -->
					<executions>
						<execution>
							<goals>
								<goal>ipojo-bundle</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<!-- License plugin -->
				<plugin>
					<groupId>com.google.code.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.4.0</version>
					<configuration>
						<header>${basedir}/../parent/license.txt</header>
						<aggregate>true</aggregate>
						<excludes>
							<exclude>license.txt</exclude>
							<exclude>**/src/test/resources/**</exclude>
							<exclude>**/src/test/data/**</exclude>
							<exclude>**/*.so</exclude>
							<exclude>**/*.dll</exclude>
							<exclude>**/*.bhv</exclude>
							<exclude>**/*.cfg</exclude>
							<exclude>**/*.dp</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<phase>verify</phase>
							<goals>
								<goal>format</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>ch.elca.el4j.maven.plugins</groupId>
					<artifactId>maven-depgraph-plugin</artifactId>
					<version>3.1</version>
				</plugin>
				
				<plugin>
					<groupId>com.googlecode.maven-overview-plugin</groupId>
					<artifactId>maven-overview-plugin</artifactId>
					<version>1.6</version>
				</plugin>
				
				<!-- Deployment package plugin -->
				<plugin>
					<groupId>de.akquinet.gomobile</groupId>
					<artifactId>maven-dp-plugin</artifactId>
					<version>1.0.1-SNAPSHOT</version>
					
				</plugin>
				
				
			</plugins>
		</pluginManagement>

		<!-- Build extensions -->
		<extensions>
			<!-- Enable SSH transport for deployment -->
