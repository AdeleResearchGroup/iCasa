	<!-- Project repositories -->
	<repositories>
		<repository>
			<id>icasa-snapshot-repository</id>
			<name>iCASA Snapshot repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/snapshot/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>icasa-release-repository</id>
			<name>iCASA Release repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/release/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<scm>
		<connection>scm:git:ssh://git@github.com/AdeleResearchGroup/iCasa-Simulator.git</connection>
		<url>http://github.com/AdeleResearchGroup/iCasa-Simulator/</url>
		<developerConnection>scm:git:ssh://git@github.com/AdeleResearchGroup/iCasa-Simulator.git</developerConnection>
		<tag>HEAD</tag>
	</scm>

	<dependencyManagement>
		<dependencies>
            <!--RoSe DP-->
            <dependency>
                <groupId>fr.liglab.adele.common</groupId>
                <artifactId>rose.dp</artifactId>
                <version>${roseVersion}</version>
                <type>deployment-package</type>
            </dependency>

            <!-- iCasa Platform dependencies -->
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>context.api</artifactId>
				<version>${iCasaPlatformVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>context.impl</artifactId>
				<version>${iCasaPlatformVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>context.remote</artifactId>
				<version>${iCasaPlatformVersion}</version>
			</dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.platform.dp</artifactId>
                <version>${iCasaVersion}</version>
                <type>deployment-package</type>
            </dependency>

            <!-- Distribution Base-->
            <dependency>
                <groupId>fr.liglab.adele.common</groupId>
                <artifactId>distribution.base</artifactId>
                <version>${AdeleBaseVersion}</version>
                <type>osgi-distribution</type>
            </dependency>

            <!-- iCasa Simulator-->
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>simulator.api</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>simulator.impl</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.light</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.sound</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.temperature</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.presence</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.power</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.personal</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.bathroom.scale</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>continua-rest-client</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>clock.simulated.impl</artifactId>
                <version>${iCasaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.simulator.dp</artifactId>
                <version>${iCasaVersion}</version>
                <type>deployment-package</type>
            </dependency>

            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.web</artifactId>
                <version>${iCasaVersion}</version>
                <type>play2</type>
            </dependency>

		</dependencies>
	</dependencyManagement>


    <distributionManagement>
        <repository>
            <id>cloudbees-adele-release</id>
            <name>Cloudbees Adele Repository</name>
            <url>dav:https://repository-icasa.forge.cloudbees.com/release</url>
        </repository>
        <snapshotRepository>
            <id>icasa-deploy-cloudbees-snapshot</id>
            <name>iCasa Cloudbees Snapshot Private Repository</name>
            <url>dav:https://repository-icasa.forge.cloudbees.com/snapshot</url>
        </snapshotRepository>
        <site>
            <id>tmp</id>
            <url>file:///tmp</url>
        </site>
    </distributionManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>fr.liglab.adele.common</groupId>
                    <artifactId>maven-osgi-distribution-plugin</artifactId>
                    <extensions>true</extensions>
                    <configuration>
                        <generateScripts>true</generateScripts>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
      
