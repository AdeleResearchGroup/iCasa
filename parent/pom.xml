<project xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath></relativePath>
	</parent>

	<!-- Project coordinates -->
	<groupId>fr.liglab.adele.m2mappbuilder</groupId>
	<artifactId>parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<!-- Project description -->
	<name>${productName} :: ${projectName}</name>
	<description>${project.name}</description>
	<inceptionYear>2012</inceptionYear>

	<!-- Project common properties -->
	<properties>
		<productName>M2MAppBuilder</productName>
		<productVersion>${m2mAppBuilderVersion}</productVersion>
		<m2mAppBuilderVersion>0.0.1-SNAPSHOT</m2mAppBuilderVersion>
		<iCasaVersion>0.0.1-SNAPSHOT</iCasaVersion>
	</properties>

	<!-- Project repositories -->
	<repositories>
	<!-- iCASA repositories -->
		<repository>
			<id>icasa-snapshot-repository</id>
			<name>iCASA Snapshot repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/snapshot/</url>
		</repository>
		<repository>
			<id>icasa-release-repository</id>
			<name>iCASA Release repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/release/</url>
		</repository>

		<!-- Cilia mediation framework repository -->
        <repository>
            <id>maven-cilia-repository-release</id>
            <name>Cilia - Release</name>
            <url>http://repository-cilia.forge.cloudbees.com/release/</url>
            <layout>default</layout>
        </repository>
        <repository>
            <id>maven-cilia-repository-snapshot</id>
            <name>Cilia - Snapshot</name>
            <url>http://repository-cilia.forge.cloudbees.com/snapshot/</url>
            <layout>default</layout>
        </repository>
		
	</repositories>
	
	 <pluginRepositories>
		<pluginRepository>
			<id>elca-services</id>
			<url>http://el4.elca-services.ch/el4j/maven2repository</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>

	<!-- Dependencies version management -->
	<dependencyManagement>
		<dependencies>

			<!-- Loggers -->
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.16</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-simple</artifactId>
				<version>1.6.1</version>
			</dependency>
		
			<!-- OW2 CILIA -->
			<dependency>
				<groupId>fr.liglab.adele.cilia</groupId>
				<artifactId>cilia-core</artifactId>
				<version>1.5.3-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.cilia</groupId>
				<artifactId>cilia-runtime</artifactId>
                <version>1.5.3-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.cilia</groupId>
				<artifactId>cilia-remote</artifactId>
                <version>1.5.3-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>cilia.dp</artifactId>
                <version>1.5.3-SNAPSHOT</version>
				<type>deployment-package</type>
			</dependency>

			<!-- ROSE -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>rose.dp</artifactId>
				<version>1.0.1-SNAPSHOT</version>
				<type>deployment-package</type>
			</dependency>

			<!-- UPNP -->
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.upnp.basedriver</artifactId>
				<version>0.8.0</version>
			</dependency>
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.upnp.extra</artifactId>
				<version>0.4.0</version>
			</dependency>

			<!-- JUnit 4 and Mockito for tests -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.2</version>
			</dependency>
			<dependency>
				<groupId>org.mockito</groupId>
				<artifactId>mockito-all</artifactId>
				<version>1.7</version>
			</dependency>
			
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.http.jetty</artifactId>
				<version>2.2.0</version>
			</dependency>
			
			<!-- M2MAppBuilder -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>common</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>application.api</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>application.impl</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>device.manager.api</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>device.manager.impl</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>platform.core.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			
			<!-- M2MAppBuilder tests -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>test.common</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			
			<!-- Settopbox -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>upnp.settopbox.importer</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>upnp.presence.detector</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>upnp.widget</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>upnp.settopbox.core.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			
			<!-- Tikitag -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>usb.discovery.rose</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.felix</groupId>
				<artifactId>org.apache.felix.usb.basedriver</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>rfid.reader</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>usb.rfid.reader.importer</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>tikitag.widget</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>tikitag.core.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			
			<!-- X10 -->
			<dependency>
				<groupId>org.rxtx</groupId>
				<artifactId>org.rxtx</artifactId>
				<version>2.2.7</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>x10.base.driver</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>x10.widget</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>x10.presence.sensor.core.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			
			<!-- iCasa Simulator -->
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>icasa.core.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>icasa.ihm.dp</artifactId>
				<version>${m2mAppBuilderVersion}</version>
				<type>deployment-package</type>
			</dependency>
			<dependency>
				<groupId>fr.liglab.adele.m2mappbuilder</groupId>
				<artifactId>icasa.device.model.bridge</artifactId>
				<version>${m2mAppBuilderVersion}</version>
			</dependency>
			
		</dependencies>
	</dependencyManagement>

	<build>

		<!-- Plugins version management -->
		<pluginManagement>
			<plugins>

				<!-- Bundle plugin -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.4</version>
					<extensions>true</extensions>
					<configuration>
						<instructions>
							<!-- Default bundle headers -->
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<Bundle-Version>${project.version}</Bundle-Version>
							<Bundle-Vendor>${project.organization.name}</Bundle-Vendor>
							<Bundle-DocURL>https://github.com/AdeleResearchGroup/M2MAppBuilder</Bundle-DocURL>
							<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
							<Bundle-ContactAddress>leveque.thomas@gmail.com</Bundle-ContactAddress>
							<Bundle-Copyright>Copyright 2011-2012 Joseph Fourier University</Bundle-Copyright>
							<Bundle-License>Apache License - Version 2.0;
								link=http://www.apache.org/licenses/LICENSE-2.0.txt</Bundle-License>
						</instructions>
					</configuration>
				</plugin>
				
				<!-- License plugin -->
				<plugin>
					<groupId>com.google.code.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.4.0</version>
					<configuration>
						<header>${basedir}/../parent/license.txt</header>
						<aggregate>true</aggregate>
						<excludes>
							<exclude>.gitignore</exclude>
							<exclude>license.txt</exclude>
                            <exclude>**/.idea/**</exclude>
                            <exclude>**/*.iml</exclude>
							<exclude>**/src/test/resources/**</exclude>
							<exclude>**/src/test/data/**</exclude>
							<exclude>**/*.so</exclude>
							<exclude>**/*.dll</exclude>
							<exclude>**/*.bhv</exclude>
							<exclude>**/*.cfg</exclude>
							<exclude>**/*.dp</exclude>
							<exclude>**/*.xcf</exclude>
							<exclude>**/*.md</exclude>
							<exclude>**/*.jj</exclude>
							<exclude>.git/**/*</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<phase>verify</phase>
							<goals>
								<goal>format</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				
			</plugins>
		</pluginManagement>

		<!-- Build extensions -->
		<extensions>
			<extension> 
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
			</extension>
			<extension> 
				<groupId>de.akquinet.gomobile</groupId>
				<artifactId>maven-dp-plugin</artifactId>
				<version>1.0.1-SNAPSHOT</version>
			</extension>
		</extensions>
		
		<plugins>
		  
		</plugins>
	</build>
</project>
