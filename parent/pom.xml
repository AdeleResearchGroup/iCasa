<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project coordinates -->
    <parent>
        <groupId>fr.liglab.adele.common</groupId>
        <artifactId>base</artifactId>
        <version>1.1.1</version>
        <relativePath>
        </relativePath>
    </parent>
    <groupId>fr.liglab.adele.icasa.apps</groupId>
    <artifactId>parent</artifactId>
    <packaging>pom</packaging>
    <version>1.1.2-SNAPSHOT</version>

    <!-- Project description -->
    <name>${productName} :: ${projectName}</name>
    <description>${project.name}</description>
    <inceptionYear>2012</inceptionYear>

    <!-- Project common properties -->
    <properties>
        <productName>iCasa Apps</productName>
        <productVersion>${project.version}</productVersion>
        <projectName>${project.artifactId}</projectName>

        <!-- ADELE Projects -->
        <AdeleBaseVersion>1.1.1</AdeleBaseVersion>
        <ciliaVersion>1.7.1</ciliaVersion>
        <iCasaPlatformVersion>1.1.2-SNAPSHOT</iCasaPlatformVersion>
        <iCasaSimulatorVersion>1.1.2-SNAPSHOT</iCasaSimulatorVersion>
        <DistributionTestVersion>1.1.2-SNAPSHOT</DistributionTestVersion>

    </properties>

    <!-- Project repositories -->
    <repositories>

        <!-- ADELE repositories -->
        <repository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>adele-central-snapshot</id>
            <name>adele-repos</name>
            <url>http://maven.dynamis-technologies.com/artifactory/adele-repos</url>
        </repository>
        <repository>
            <snapshots />
            <id>snapshots</id>
            <name>adele-central-release</name>
            <url>http://maven.dynamis-technologies.com/artifactory/adele-repos</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>central</id>
            <name>adele-repos</name>
            <url>http://maven.dynamis-technologies.com/artifactory/adele-repos</url>
        </pluginRepository>
        <pluginRepository>
            <snapshots />
            <id>snapshots</id>
            <name>adele-central-release</name>
            <url>http://maven.dynamis-technologies.com/artifactory/adele-repos</url>
        </pluginRepository>
    </pluginRepositories>

    <!-- Dependencies version management -->
    <dependencyManagement>
        <dependencies>
            <!-- Distribution Base-->
            <dependency>
                <groupId>fr.liglab.adele.common</groupId>
                <artifactId>distribution.base</artifactId>
                <version>${AdeleBaseVersion}</version>
                <type>osgi-distribution</type>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.teaching.distribution</artifactId>
                <version>${iCasaSimulatorVersion}</version>
                <type>osgi-distribution</type>
            </dependency>
            <!-- iCasa -->
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>common</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>application.api</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>context.api</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>context.remote</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>context.impl</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>application.impl</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>

            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.manager.api</artifactId>
                <version>${iCasaPlatformVersion}</version>
            </dependency>

            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.web</artifactId>
                <version>${iCasaSimulatorVersion}</version>
                <type>play2</type>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.platform.dp</artifactId>
                <version>${iCasaPlatformVersion}</version>
                <type>deployment-package</type>
            </dependency>
            
          <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>device.dependency.annotations</artifactId>
            <version>${iCasaPlatformVersion}</version>    
          </dependency>                    
            
            <!-- iCasa Simulator-->
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>simulator.api</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>simulator.impl</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.light</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.sound</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.temperature</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.presence</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.power</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.personal</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>device.bathroom.scale</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>clock.simulated.impl</artifactId>
                <version>${iCasaSimulatorVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.icasa</groupId>
                <artifactId>icasa.simulator.dp</artifactId>
                <version>${iCasaSimulatorVersion}</version>
                <type>deployment-package</type>
            </dependency>
            <!--RoSe DP-->
            <dependency>
               <groupId>org.ow2.chameleon.rose</groupId>
               <artifactId>rose.dp</artifactId>
                <version>${roseVersion}</version>
                <type>deployment-package</type>
            </dependency>

            <!-- CILIA -->
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-core</artifactId>
                <version>${ciliaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-runtime</artifactId>
                <version>${ciliaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-remote</artifactId>
                <version>${ciliaVersion}</version>
            </dependency>
            <!-- Cilia Deployment Packages-->
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia.dp</artifactId>
                <version>${ciliaVersion}</version>
                <type>deployment-package</type>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-eventadmin.dp</artifactId>
                <type>deployment-package</type>
                <version>${ciliaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-remote.dp</artifactId>
                <type>deployment-package</type>
                <version>${ciliaVersion}</version>
            </dependency>
            <dependency>
                <groupId>fr.liglab.adele.cilia</groupId>
                <artifactId>cilia-joram.dp</artifactId>
                <type>deployment-package</type>
                <version>${ciliaVersion}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>fr.liglab.adele.common</groupId>
                    <artifactId>maven-osgi-distribution-plugin</artifactId>
                    <extensions>true</extensions>
                    <configuration>
                        <generateScripts>true</generateScripts>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <distributionManagement>
        <repository>
            <id>icasa-deploy-cloudbees-release</id>
            <name>Cloudbees Adele Repository</name>
            <url>dav:https://repository-icasa.forge.cloudbees.com/release</url>
        </repository>
        <snapshotRepository>
            <id>icasa-deploy-cloudbees-snapshot</id>
            <name>iCasa Cloudbees Snapshot Private Repository</name>
            <url>dav:https://repository-icasa.forge.cloudbees.com/snapshot</url>
        </snapshotRepository>
        <site>
            <id>tmp</id>
            <url>file:target/site-tmp</url>
        </site>
    </distributionManagement>

    <scm>
        <connection>scm:git:ssh://git@github.com/AdeleResearchGroup/iCasa-Apps.git</connection>
        <url>https://github.com/AdeleResearchGroup/iCasa-Apps.git</url>
        <developerConnection>scm:git:ssh://git@github.com/AdeleResearchGroup/iCasa-Apps.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
</project>
      