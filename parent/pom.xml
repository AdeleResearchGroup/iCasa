        <tag>HEAD</tag>
    </scm>

	<build>

		<!-- Plugins version management -->
		<pluginManagement>
			<plugins>

				<!-- Compiler plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.5.1</version>
					<configuration>
						<!-- By default, compile Java 1.5 sources for JRE 1.5. for better support of 32 bit native libraries -->
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>

				<!-- Bundle plugin -->

				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.4</version>
					<extensions>true</extensions>
					<configuration>
						<instructions>
							<!-- Default bundle headers -->
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<Bundle-Version>${project.version}</Bundle-Version>
							<Bundle-Vendor>${project.organization.name}</Bundle-Vendor>
							<Bundle-DocURL>https://github.com/AdeleResearchGroup/iCasa</Bundle-DocURL>
							<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
							<Bundle-ContactAddress>leveque.thomas@gmail.com</Bundle-ContactAddress>
							<Bundle-Copyright>Copyright 2011-2012 Joseph Fourier University</Bundle-Copyright>
							<Bundle-License>Apache License - Version 2.0;
								link=http://www.apache.org/licenses/LICENSE-2.0.txt</Bundle-License>
						</instructions>
					</configuration>
				</plugin>

				<!-- License plugin -->
				<plugin>
					<groupId>com.google.code.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.4.0</version>
					<configuration>
						<header>${basedir}/parent/license.txt</header>
						<aggregate>true</aggregate>
						<excludes>
							<exclude>.gitignore</exclude>
							<exclude>license.txt</exclude>
							<exclude>**/src/test/resources/**</exclude>
							<exclude>**/src/test/data/**</exclude>
							<exclude>**/public/javascripts/frameworks/**</exclude>
							<exclude>**/app/assets/javascripts/frameworks/**</exclude>
							<exclude>**/*.so</exclude>
							<exclude>**/*.dll</exclude>
							<exclude>**/*.bhv</exclude>
							<exclude>**/*.cfg</exclude>
							<exclude>**/*.dp</exclude>
							<exclude>**/*.xcf</exclude>
							<exclude>**/*.md</exclude>
							<exclude>**/*.jj</exclude>
							<exclude>.git/**/*</exclude>
                            <exclude>**/.idea/**</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<phase>verify</phase>
							<goals>
								<goal>format</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>ch.elca.el4j.maven.plugins</groupId>
					<artifactId>maven-depgraph-plugin</artifactId>
					<version>3.1</version>
				</plugin>
				
				<plugin>
					<groupId>com.googlecode.maven-overview-plugin</groupId>
					<artifactId>maven-overview-plugin</artifactId>
					<version>1.6</version>
				</plugin>
				
				<!-- Deployment package plugin -->
				<plugin>
					<groupId>de.akquinet.gomobile</groupId>
					<artifactId>maven-dp-plugin</artifactId>
					<version>1.0.1-SNAPSHOT</version>
					
				</plugin>

				<!-- Play2 framework plugin -->
				<plugin>
                	<groupId>de.akquinet.innovation.play2</groupId>
                	<artifactId>play2-maven-plugin</artifactId>
                	<version>1.2.1</version>
            	</plugin>


                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.8.1</version>
                    <configuration>
                        <excludePackageNames>*.internal,*.internal.*,*.impl,*.impl.*</excludePackageNames>
                    </configuration>
                </plugin>
				
			</plugins>
		</pluginManagement>

		<!-- Build extensions -->
		<extensions>
            <extension>
                <groupId>de.akquinet.innovation.play2</groupId>
                <artifactId>play2-maven-plugin</artifactId>
                <version>1.2.1</version>
            </extension>
		</extensions>

	</build>

