<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Project parent -->
	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../../../parent</relativePath>
	</parent>

	<!-- Project Description -->
	<artifactId>platform.core.dp</artifactId>
	<packaging>deployment-package</packaging>
	<name>ICASA Core Platform DP</name>
	<description>${project.name}</description>

	<dependencies>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>application.api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>application.impl</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>device.manager.api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>device.manager.impl</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>de.akquinet.gomobile</groupId>
				<artifactId>maven-dp-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<writeExtraData>true</writeExtraData>
					<includeDependencies>true</includeDependencies>
					<deploymentPackage>
						<resources>
						</resources>
					</deploymentPackage>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
