<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project parent -->
    <parent>
        <groupId>fr.liglab.adele.icasa</groupId>
        <artifactId>parent</artifactId>
        <version>1.2.7-SNAPSHOT</version>
        <relativePath>../../../parent</relativePath>
    </parent>

    <!-- Project Description -->
    <artifactId>philips.hue.dp</artifactId>
    <packaging>deployment-package</packaging>
    <name>${productName} :: ${projectName}</name>

    <properties>
        <fuchsia.version>0.0.5-SNAPSHOT</fuchsia.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>philips.device.importer</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>philips.device.fuchsia.set.up</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <artifactId>org.ow2.chameleon.fuchsia.base.philips-hue.huedsk-bundle</artifactId>
            <groupId>org.ow2.chameleon.fuchsia.base.philips-hue</groupId>
            <version>${fuchsia.version}</version>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>org.ow2.chameleon.fuchsia.discovery</groupId>
            <artifactId>org.ow2.chameleon.fuchsia.discovery.philips-hue</artifactId>
            <version>${fuchsia.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>de.akquinet.gomobile</groupId>
                <artifactId>maven-dp-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <writeExtraData>true</writeExtraData>
                    <includeDependencies>true</includeDependencies>
                    <deploymentPackage>
                        <resources>
                        </resources>
                    </deploymentPackage>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
