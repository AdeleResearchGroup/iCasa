<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Project parent -->
	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>platform.parent</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <relativePath>../../../parent</relativePath>
	</parent>

	<!-- Project Description -->
	<artifactId>icasa.platform.dp</artifactId>
	<packaging>deployment-package</packaging>
	<name>${productName} :: ${projectName}</name>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>common</artifactId>
         <version>${project.version}</version>
		</dependency>
		<dependency>
         <groupId>${project.groupId}</groupId>
			<artifactId>application.api</artifactId>
         <version>${project.version}</version>
		</dependency>
      <dependency>
         <groupId>${project.groupId}</groupId>
         <artifactId>context.api</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>${project.groupId}</groupId>
         <artifactId>context.remote</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>${project.groupId}</groupId>
         <artifactId>context.impl</artifactId>
         <version>${project.version}</version>
      </dependency>
		<dependency>
         <groupId>${project.groupId}</groupId>
			<artifactId>application.impl</artifactId>
         <version>${project.version}</version>
		</dependency>
		
		<dependency>
         <groupId>${project.groupId}</groupId>
			<artifactId>device.manager.api</artifactId>
         <version>${project.version}</version>
		</dependency>
		
		<dependency>
         <groupId>${project.groupId}</groupId>
			<artifactId>device.manager.impl</artifactId>
         <version>${project.version}</version>
		</dependency>
		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>de.akquinet.gomobile</groupId>
				<artifactId>maven-dp-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<writeExtraData>true</writeExtraData>
					<includeDependencies>true</includeDependencies>
					<deploymentPackage>
						<resources>
						</resources>
					</deploymentPackage>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
