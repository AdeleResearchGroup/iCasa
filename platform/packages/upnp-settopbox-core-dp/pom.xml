<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Project parent -->
	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>platform.parent</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <relativePath>../../../parent</relativePath>
	</parent>

	<!-- Project Description -->
	<artifactId>upnp.settopbox.core.dp</artifactId>
	<packaging>deployment-package</packaging>
	<name>${productName} :: ${projectName}</name>

	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.upnp.basedriver</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.upnp.extra</artifactId>
		</dependency>
		<!--dependency> <groupId>fr.liglab.adele.m2mappbuilder</groupId> <artifactId>upnp.presence.detector</artifactId> 
			<version>${project.version}</version> </dependency> <dependency> <groupId>fr.liglab.adele.m2mappbuilder</groupId> 
			<artifactId>upnp.presence.detector.proxy</artifactId> <version>${project.version}</version> 
			</dependency> <dependency> <groupId>fr.liglab.adele.m2mappbuilder</groupId> <artifactId>upnp.presence.detector.importer</artifactId> 
			<version>${project.version}</version> </dependency -->
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>upnp.settopbox.importer</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>de.akquinet.gomobile</groupId>
				<artifactId>maven-dp-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<writeExtraData>true</writeExtraData>
					<deploymentPackage>
						<resources>
							<processedResource>
								<processor>org.osgi.deployment.rp.autoload</processor>
								<filePath>/src/main/resources/rose-conf-settopbox0.json</filePath>
							</processedResource>
						</resources>
					</deploymentPackage>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
