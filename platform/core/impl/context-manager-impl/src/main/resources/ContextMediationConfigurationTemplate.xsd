<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="fr.liglab.adele.icasa.context.manager.impl"
           xmlns="fr.liglab.adele.icasa.context.manager.impl"
           elementFormDefault="qualified">

    <xs:element name="context-black-box">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="context-api">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="name" type="xs:string"/>
                            <xs:simpleType name="proxies">
                                <xs:list itemType="proxy-service"/>
                            </xs:simpleType>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!--<xs:attribute name="proxy" type="xs:string" default=""/>-->
    <xs:simpleType name="proxy-service">
        <xs:restriction base="xs:string">
            <xs:enumeration value="fr.liglab.adele.icasa.device.light.BinaryLight"/>
            <xs:enumeration value="fr.liglab.adele.icasa.device.light.DimmerLight"/>
            <xs:enumeration value="fr.liglab.adele.icasa.device.light.Photometer"/>
            <xs:enumeration value="fr.liglab.adele.icasa.device.presence.PresenceSensor"/>
            <xs:enumeration value="fr.liglab.adele.icasa.location.Zone"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>