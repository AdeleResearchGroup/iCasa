<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <!-- Project parent -->
  <!-- Project parent -->
  <parent>
     <groupId>fr.liglab.adele.icasa</groupId>
     <artifactId>parent</artifactId>
     <version>1.2.6-SNAPSHOT</version>
     <relativePath>../../../../parent</relativePath>
  </parent>

  <!-- Project Description -->
  <modelVersion>4.0.0</modelVersion>
  <artifactId>gogo.adapter</artifactId>
  <packaging>bundle</packaging>
  <name>${productName} :: ${projectName}</name>

  <dependencies>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.framework</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.gogo.shell</artifactId>
    </dependency>    
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.gogo.runtime</artifactId>
      <exclusions>
           <exclusion>
              <groupId>org.eclipse.osgi</groupId>
              <artifactId>org.eclipse.osgi</artifactId>
           </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.ipojo</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.ipojo.annotations</artifactId>
    </dependency>
    <dependency>
       <groupId>${project.groupId}</groupId>
       <artifactId>context.api</artifactId>
      <version>${project.version}</version>
    </dependency>

      <!-- OW2 Chameleon handies & annotations -->
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
            <instructions>
                <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                <Private-Package>fr.liglab.adele.icasa.command.impl,fr.liglab.adele.osgi.shell.*</Private-Package>
                <Export-Package>fr.liglab.adele.icasa.command, fr.liglab.adele.osgi.shell.installer</Export-Package>
            </instructions>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-ipojo-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>ipojo-bundle</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
