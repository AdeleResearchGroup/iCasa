<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
  
	<!-- Project parent -->
	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>parent</artifactId>
		<version>1.2.7-SNAPSHOT</version>
		<relativePath>../../../../parent</relativePath>
	</parent>
	
	<artifactId>zwave-device-importer</artifactId>
	<packaging>bundle</packaging>
	<name>${productName} :: ${projectName} :: ZWave Device Importer</name>
	
	<properties>
		<fuchsia.version>0.0.5-SNAPSHOT</fuchsia.version>
	</properties>
	
    <dependencies>
    
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>context.api</artifactId>
			<version>${project.version}</version>
		</dependency>
    
        <dependency>
            <groupId>org.ow2.chameleon.fuchsia</groupId>
            <artifactId>org.ow2.chameleon.fuchsia.core</artifactId>
			<version>${fuchsia.version}</version>
        </dependency>

		<dependency>
			<groupId>org.openhab.binding</groupId>
			<artifactId>org.openhab.binding.zwave</artifactId>
			<version>1.8.2</version>
		</dependency>

		<dependency>
			<groupId>com.github.zgmnkv</groupId>
			<artifactId>zwave4j</artifactId>
			<version>0.3</version>
		</dependency>

        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.ipojo.annotations</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.7.2</version>
		</dependency>

        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>command.handler</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

    </dependencies>
	
	
	<build>
		<plugins>
        	<plugin>
            	<groupId>org.apache.maven.plugins</groupId>
            	<artifactId>maven-assembly-plugin</artifactId>
				<extensions>true</extensions>
			</plugin>		
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
               <configuration>
                    <instructions>
                        <Bundle-SymbolicName>
                            ${project.artifactId}
                        </Bundle-SymbolicName>
                        <Export-Package>fr.liglab.adele.zwave.device.api</Export-Package>
                        <Private-Package>
                        	fr.liglab.adele.zwave.*,
                        	org.openhab.binding.zwave.internal.protocol.initialization;-split-package:=merge-first,
                        	org.openhab.binding.zwave.internal.protocol.*,
							org.openhab.binding.zwave.internal.config.*;-split-package:=merge-first,
                        	org.openhab.binding.zwave.internal
                        </Private-Package>
                        <Import-Package>
                        	!org.openhab.*,
                        	!com.thoughtworks.*,
                        	*
                        </Import-Package>
                    </instructions>
                </configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<dependencies>
					<dependency>
						<groupId>fr.liglab.adele.icasa</groupId>
						<artifactId>icasa.context.ipojo.module</artifactId>
						<version>${project.version}</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<dependencySourceExcludes>
						<exclude>org.openhab.binding:*</exclude>
					</dependencySourceExcludes>

				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>