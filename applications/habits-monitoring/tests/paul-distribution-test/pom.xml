<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>platform.parent</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>paul.distribution.test</artifactId>
	<name>${productName} :: Paul Distribution Test Base</name>
	<packaging>jar</packaging>


	<properties>
		<exam.version>3.0.0</exam.version>
		<url.version>1.5.2</url.version>
		<distrib.groupId>fr.liglab.adele.icasa.apps</distrib.groupId>
		<distrib.artifactId>habits.monitoring.distribution.box.paul</distrib.artifactId>
		<distrib.version>${project.version}</distrib.version>

	</properties>
	
	<repositories>
	<!-- iCASA repositories -->
		<repository>
			<id>icasa-snapshot-repository</id>
			<name>iCASA Snapshot repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/snapshot/</url>
		</repository>
		<repository>
			<id>icasa-release-repository</id>
			<name>iCASA Release repository</name>
			<url>https://repository-icasa.forge.cloudbees.com/release/</url>
		</repository>
      <!-- For android apps-->
      <repository>
         <id>teleal-repo</id>
         <url>http://teleal.org/m2</url>
         <snapshots>
            <enabled>true</enabled>
         </snapshots>
      </repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>context.api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo</artifactId>
		</dependency>
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-container-native</artifactId>
			<version>${exam.version}</version>
			<scope>test</scope>
		</dependency>
		<!-- Needed bundles to run pax-exam -->
		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-junit4</artifactId>
			<version>${exam.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.ops4j.pax.exam</groupId>
			<artifactId>pax-exam-link-mvn</artifactId>
			<version>${exam.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.ops4j.pax.url</groupId>
			<artifactId>pax-url-aether</artifactId>
			<version>${url.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<type>jar</type>
			<scope>test</scope>
		</dependency>

		<!-- Distribution to test -->
		<dependency>
			<groupId>${distrib.groupId}</groupId>
			<artifactId>${distrib.artifactId}</artifactId>
			<version>${distrib.version}</version>
			<type>osgi-distribution</type>
			<scope>test</scope>
		</dependency>
		<!--Test to herit -->
		<dependency>
			<groupId>fr.liglab.adele.common</groupId>
			<artifactId>base.distribution.test</artifactId>
         <version>${DistributionTestVersion}</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.common</groupId>
			<artifactId>distribution.factory</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<!-- declare the exclusion here -->
					<groupId>org.apache.felix</groupId>
					<artifactId>org.apache.felix.framework</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-distrib</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeGroupIds>${distrib.groupId}</includeGroupIds>
							<includeArtifactIds>${distrib.artifactId}</includeArtifactIds>
							<outputDirectory>${project.build.directory}/distribution</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.ops4j.pax.exam</groupId>
				<artifactId>maven-paxexam-plugin</artifactId>
				<executions>
					<execution>
						<id>generate-config</id>
						<goals>
							<goal>generate-depends-file</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>