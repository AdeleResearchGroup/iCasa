<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.liglab.adele.icasa</groupId>
		<artifactId>parent</artifactId>
		<version>1.2.6-SNAPSHOT</version>
      <relativePath>../../../../parent</relativePath>
	</parent>
   <groupId>fr.liglab.adele.icasa.apps</groupId>
	<artifactId>adapter.test</artifactId>
	<name>${productName} :: Adapter tests</name>
	<packaging>jar</packaging>


	<properties>
      <name>${productName} :: Habits Monitoring :: Adapters tests</name>
		<exam.version>3.0.0</exam.version>
		<url.version>1.5.2</url.version>
		<distrib.groupId>fr.liglab.adele.icasa.apps</distrib.groupId>
      <distrib.artifactId>habits.monitoring.distribution.to.test</distrib.artifactId>
		<distrib.version>${project.version}</distrib.version>
	</properties>


	<dependencies>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>context.api</artifactId>
			<version>${project.version}</version>
         <exclusions>
            <exclusion>
               <groupId>org.osgi</groupId>
               <artifactId>org.osgi.core</artifactId>
            </exclusion>
         </exclusions>
		</dependency>
		<dependency>
			<groupId>fr.liglab.adele.icasa</groupId>
			<artifactId>simulator.api</artifactId>
         <version>${project.version}</version>
         <exclusions>
            <exclusion>
               <groupId>org.osgi</groupId>
               <artifactId>org.osgi.core</artifactId>
            </exclusion>
         </exclusions>
		</dependency>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>device.push.button</artifactId>
            <version>${project.version}</version>
            <exclusions>
               <exclusion>
                  <groupId>org.osgi</groupId>
                  <artifactId>org.osgi.core</artifactId>
               </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>device.presence</artifactId>
            <version>${project.version}</version>
            <exclusions>
               <exclusion>
                  <groupId>org.osgi</groupId>
                  <artifactId>org.osgi.core</artifactId>
               </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>device.light</artifactId>
            <version>${project.version}</version>
            <exclusions>
               <exclusion>
                  <groupId>org.osgi</groupId>
                  <artifactId>org.osgi.core</artifactId>
               </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>device.motion</artifactId>
            <version>${project.version}</version>
            <exclusions>
               <exclusion>
                  <groupId>org.osgi</groupId>
                  <artifactId>org.osgi.core</artifactId>
               </exclusion>
            </exclusions>
        </dependency>

		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.ipojo</artifactId>
		</dependency>
		
		<dependency>
			<groupId>fr.liglab.adele.cilia</groupId>
			<artifactId>cilia-helper</artifactId>
			<version>1.7.4-SNAPSHOT</version>
			<scope>test</scope>
         <exclusions>
            <exclusion>
               <groupId>org.osgi</groupId>
               <artifactId>org.osgi.core</artifactId>
            </exclusion>
         </exclusions>
		</dependency>


		<!-- Distribution to test -->
		<dependency>
			<groupId>${distrib.groupId}</groupId>
			<artifactId>${distrib.artifactId}</artifactId>
			<version>${distrib.version}</version>
			<type>osgi-distribution</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>${distrib.groupId}</groupId>
			<artifactId>measure.generator</artifactId>
			<version>${distrib.version}</version>
         <exclusions>
            <exclusion>
               <groupId>org.osgi</groupId>
               <artifactId>org.osgi.core</artifactId>
            </exclusion>
         </exclusions>
		</dependency>
		
      <dependency>
         <groupId>org.slf4j</groupId>
         <artifactId>slf4j-api</artifactId>
         <scope>test</scope>
      </dependency>
      
      <dependency>
         <groupId>org.mockito</groupId>
         <artifactId>mockito-all</artifactId>
         <version>1.9.5</version>
      </dependency>
      <dependency>
         <groupId>junit</groupId>
         <artifactId>junit</artifactId>
         <type>jar</type>
         <scope>test</scope>
      </dependency>
      
      <dependency>
         <groupId>fr.liglab.adele.common</groupId>
         <artifactId>chameleon-runner</artifactId>
         <version>${DistributionTestVersion}</version>
         <scope>test</scope>
      </dependency>
      <dependency>
         <groupId>org.ow2.chameleon.testing</groupId>
         <artifactId>osgi-helpers</artifactId>
         <version>0.6.2-SNAPSHOT</version>
         <exclusions>
            <exclusion>
               <groupId>org.apache.felix</groupId>
               <artifactId>org.apache.felix.framework</artifactId>
            </exclusion>
            <exclusion>
               <groupId>org.ow2.chameleon</groupId>
               <artifactId>chameleon-core</artifactId>
            </exclusion>
            <exclusion>
               <groupId>org.osgi</groupId>
               <artifactId>org.osgi.core</artifactId>
            </exclusion>
            <exclusion>
               <groupId>ch.qos.logback</groupId>
               <artifactId>logback-core</artifactId>
            </exclusion>
            <exclusion>
               <groupId>ch.qos.logback</groupId>
               <artifactId>logback-classic</artifactId>
            </exclusion>
            <exclusion>
               <groupId>org.ops4j.pax.tinybundles</groupId>
               <artifactId>tinybundles</artifactId>
            </exclusion>
            <exclusion>
               <groupId>biz.aQute</groupId>
               <artifactId>bndlib</artifactId>
            </exclusion>
         </exclusions>
      </dependency>  
		
		
	</dependencies>

	<build>
		<plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <systemPropertyVariables>
                        <ipojo.processing.synchronous>true</ipojo.processing.synchronous>
                        <org.osgi.framework.bootdelegation>sun.*</org.osgi.framework.bootdelegation>
                        <felix.bootdelegation.implicit>false</felix.bootdelegation.implicit>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-distrib</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeGroupIds>${distrib.groupId}</includeGroupIds>
							<includeArtifactIds>${distrib.artifactId}</includeArtifactIds>
							<outputDirectory>${project.build.directory}/distribution</outputDirectory>
						</configuration>
					</execution>
               <execution>
                  <id>copy-deps</id>
                  <phase>validate</phase>
                  <goals>
                     <goal>copy</goal>
                  </goals>
                  <configuration>
                     <artifactItems>
                        <artifactItem>
                           <groupId>org.ow2.chameleon.testing</groupId>
                           <artifactId>osgi-helpers</artifactId>
                           <outputDirectory>${project.build.directory}/distribution/${distrib.artifactId}/runtime</outputDirectory>
                        </artifactItem>
                        <artifactItem>
                           <groupId>org.mockito</groupId>
                           <artifactId>mockito-all</artifactId>
                           <outputDirectory>${project.build.directory}/distribution/${distrib.artifactId}/runtime</outputDirectory>
                        </artifactItem>
                        <artifactItem>
                           <groupId>fr.liglab.adele.cilia</groupId>
                           <artifactId>cilia-helper</artifactId>
                           <outputDirectory>${project.build.directory}/distribution/${distrib.artifactId}/runtime</outputDirectory>
                        </artifactItem>
                     </artifactItems>
                  </configuration>
               </execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

   <profiles>
  <profile>
    <activation>
      <os>
         <name>mac os x</name>
      </os>            
    </activation>
    <properties>
      <skipTests>true</skipTests>
    </properties>  
  </profile>
</profiles>

</project>