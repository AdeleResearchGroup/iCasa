      <project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
         <modelVersion>4.0.0</modelVersion>
         
         <!-- Project parent -->
         <parent>
            <groupId>fr.liglab.adele.icasa.apps</groupId>
            <artifactId>parent</artifactId>
            <version>1.1.2-SNAPSHOT</version>
            <relativePath>../../../../parent</relativePath>
         </parent>
         
         <!-- Project coordinates -->
         <artifactId>habits.monitoring.distribution.box.aurelie</artifactId>
         <packaging>osgi-distribution</packaging>
         <!-- Project description -->
         <name>${productName} :: Habits Monitoring :: Distribution :: Box Aurelie</name>
         
         <properties>
            <productName>iCasa Apps</productName>
            <!-- flag to flatten deployment packages -->
            <flattenDP>false</flattenDP>
         </properties>
         
         <!-- Project dependencies -->
         <dependencies>
            <dependency>
				<groupId>fr.liglab.adele.icasa</groupId>
				<artifactId>icasa.teaching.distribution</artifactId>
				<type>osgi-distribution</type>
			</dependency>
            <!-- deployed packages -->
            <dependency>
               <groupId>org.ow2.chameleon.rose</groupId>
               <artifactId>rose.dp</artifactId>
               <type>deployment-package</type>
            </dependency>
            <dependency>
               <groupId>fr.liglab.adele.cilia</groupId>
               <artifactId>cilia.dp</artifactId>
               <type>deployment-package</type>
            </dependency>
            <dependency>
               <groupId>fr.liglab.adele.cilia</groupId>
               <artifactId>cilia-remote.dp</artifactId>
               <type>deployment-package</type>
            </dependency>
            <dependency>
               <groupId>fr.liglab.adele.icasa</groupId>
               <artifactId>icasa.platform.dp</artifactId>
               <type>deployment-package</type>
            </dependency>
            <dependency>
               <groupId>fr.liglab.adele.icasa</groupId>
               <artifactId>icasa.simulator.dp</artifactId>
               <type>deployment-package</type>
            </dependency>
            <!-- DP Remote installer-->
            <dependency>
               <groupId>fr.liglab.adele.icasa</groupId>
               <artifactId>dp-rest-installer.dp</artifactId>
               <version>${iCasaPlatformVersion}</version>
               <type>deployment-package</type>
            </dependency>
            <!-- Only one clock must be available in the platform-->
            <dependency>
               <groupId>fr.liglab.adele.icasa</groupId>
               <artifactId>clock.simulated.impl</artifactId>
               <version>${iCasaSimulatorVersion}</version>
            </dependency>
            
            <!-- habits monitoring application -->
            <dependency>
               <groupId>${project.groupId}</groupId>
               <artifactId>measure.generator.mock.dp</artifactId>
               <type>deployment-package</type>
               <version>${project.version}</version>
            </dependency>
            
            <!-- Jersey Dependencies-->
            <dependency>                
               <groupId>com.sun.jersey</groupId>
               <artifactId>jersey-core</artifactId>
            </dependency>
            <dependency>                
               <groupId>com.sun.jersey</groupId>
               <artifactId>jersey-client</artifactId>
            </dependency>
            <dependency>                
               <groupId>com.sun.jersey</groupId>
               <artifactId>jersey-server</artifactId>
            </dependency>
            
         </dependencies>
         <build>
            <plugins>
               <plugin>
                  <groupId>fr.liglab.adele.common</groupId>
                  <artifactId>osgi-distribution-plugin</artifactId>
               </plugin>
            </plugins>
         </build>
           
      </project>
      