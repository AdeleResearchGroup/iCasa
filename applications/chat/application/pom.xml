    <artifactId>jabber.chat.application</artifactId>
    <groupId>fr.liglab.adele.icasa.apps</groupId>
    <name>${productName} :: ${projectName}</name>
    <packaging>pom</packaging>

    <modules>
        <module>chat-messages-receiver</module>
        <module>chat-regulators</module>
        <module>chat-config</module>
        <module>chat-commands</module>
        <module>xmpp - importer</module>
