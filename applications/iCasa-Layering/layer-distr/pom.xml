<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project parent -->
    <parent>
        <groupId>fr.liglab.adele.icasa</groupId>
        <artifactId>parent</artifactId>
        <version>1.2.7-SNAPSHOT</version>
        <relativePath />
    </parent>

    <!-- Project coordinates -->

	<groupId>fr.liglab.adele.icasa.layering</groupId>
    <artifactId>icasa.layering.distribution</artifactId>
	<version>1.0-SNAPSHOT</version>

    <packaging>osgi-distribution</packaging>

    <name>${productName} :: ${projectName}</name>

    <properties>
        <icasa.version>1.2.7-SNAPSHOT</icasa.version>
        <fuchsia.version>0.0.5-SNAPSHOT</fuchsia.version>
    </properties>

    <repositories>
        <repository>
            <id>icasa-socm-repository</id>
            <name>iCasa SOCM Cloudbees Snapshot Private Repository</name>
            <url>http://adele.imag.fr/repository/icasa/socm</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>

        <repository>
            <id>adele-central-snapshot</id>
            <name>adele-central-snapshot</name>
            <url>http://adele.imag.fr/repository/snapshot</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <!-- Project dependencies -->
    <dependencies>
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>icasa.dashboard.distribution</artifactId>
            <version>${icasa.version}</version>
            <type>osgi-distribution</type>
        </dependency>


        <!--SIMULATOR -->
        <dependency>
            <groupId>fr.liglab.adele.icasa</groupId>
            <artifactId>simulator.web.instance</artifactId>
            <version>${icasa.version}</version>
        </dependency>

        <!-- Context -->
        <dependency>
            <groupId>fr.liglab.adele.cream</groupId>
            <artifactId>cream.runtime.facilities</artifactId>
        </dependency>

        <!-- Context Management -->

        <dependency>
            <groupId>fr.liglab.adele.cream</groupId>
            <artifactId>cream.administration.api</artifactId>
            <version>${context.socm.version}</version>
            <type>bundle</type>
        </dependency>

        <dependency>
            <groupId>fr.liglab.adele.cream</groupId>
            <artifactId>cream.administration.impl</artifactId>
            <version>${context.socm.version}</version>
            <type>bundle</type>
        </dependency>

        <dependency>
            <groupId>fr.liglab.adele.cream</groupId>
            <artifactId>cream.administration.command</artifactId>
            <version>${context.socm.version}</version>
            <type>bundle</type>
        </dependency>


        <!--Applications -->


        <dependency>
            <groupId>fr.liglab.adele.icasa.layering</groupId>
            <artifactId>icasa.layering.webdisplay</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        
		<dependency>
            <groupId>fr.liglab.adele.icasa.layering</groupId>
            <artifactId>icasa.layering.structure</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.wisdom-framework</groupId>
                <artifactId>wisdom-maven-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>

            <plugin>
                <groupId>fr.liglab.adele.common</groupId>
                <artifactId>maven-osgi-distribution-plugin</artifactId>
                <configuration>
                    <flattenDP>false</flattenDP>
                    <defaultOutputDirectory>applications</defaultOutputDirectory>
                </configuration>
            </plugin>

  
        </plugins>
    </build>

</project>
