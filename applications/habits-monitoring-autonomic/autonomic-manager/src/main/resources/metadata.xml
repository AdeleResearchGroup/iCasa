<ipojo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
  xmlns:ipojo="org.apache.felix.ipojo" xmlns:cilia="fr.liglab.adele.cilia">
   
  <!-- Modify the Cilia topology according new devices an policies configured   -->
  <component name="DevicePolicyManager" classname="fr.liglab.adele.habits.autonomic.manager.DevicePolicyManager" >
    <requires field="ciliaContext"  />
  	<requires field="iCasaContext" />
    <properties>
      <property name ="devices.config" field ="m_devicesProperties" value="file:./load/devicesPolicy.properties" />
      <property name ="mediators.config" field ="m_mediatorsProperties" value="file:./load/mediatorsPolicy.properties" />      
     </properties>
    <callback transition="validate" method="start" />
  	<callback transition="invalidate" method="stop" />
  </component>
  <instance component="DevicePolicyManager" name="autonomicManager.DevicePolicy" />
  
  <!--   QoS Management  -->
  <component name="QoSPolicyManager" classname="fr.liglab.adele.habits.autonomic.manager.QoSPolicyManager" >
    <requires field="ciliaContext"  />
    <properties>
      <property name ="countdown.timer.period" field ="m_period" value="60000" />
      <property name ="threshold.max.filter" field ="m_threshold" value="1" />
   </properties>
    <callback transition="validate" method="start" />
  	<callback transition="invalidate" method="stop" />
  </component>
  <instance component="QoSPolicyManager" name="autonomicManager.QosPolicy" />

  <!--  Apply Patch  -->
  <component name="LiveUpdateManager" classname="fr.liglab.adele.habits.autonomic.manager.LiveUpdateManager" >
    <requires field="ciliaContext"  />
    <callback transition="validate" method="start" />
  	<callback transition="invalidate" method="stop" />
  </component>
  <instance component="LiveUpdateManager" name="autonomicManager.LiveUpdateManager" />
  
 
</ipojo>