# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /grid                       controllers.Application.getGrid

# Map management
GET     /map/*mapId                 controllers.Application.connectToMap(mapId)
GET     /maps                       controllers.Application.showMaps
GET     /maps/*file                 controllers.Application.getMap(file)
POST    /mapUpload                  controllers.Application.uploadMap

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# static resources directory used for extensions
GET     /extensions/*file           controllers.SecuredExternalAssets.at(path="extensions", file)

