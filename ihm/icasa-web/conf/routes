# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# REST service for Devices
GET     /service/devices            controllers.Devices.getAll()
GET     /service/device/:id         controllers.Devices.getById(id: Long)
POST    /service/device             controllers.Devices.create()
PUT     /service/device/:id         controllers.Devices.update(id: Long)
DELETE  /service/device/:id         controllers.Devices.delete(id: Long)

